<a data-bs-toggle="offcanvas" href="#<%= item_id %>_drawer" role="button" aria-controls="<%= item_id %>_drawer">
  <%= btn_text %>
</a>
<div class="offcanvas offcanvas-<%= position %> canvas-custom-class" tabindex="-1" id="<%= item_id %>_drawer" aria-labelledby="<%= item_id %>_drawerLabel">
  <div id="<%= item_id %>_drawer_flash_message" class="flash">
    <%= render "shared/flash_messages" %>
  </div>
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="<%= item_id %>_drawerLabel"><%= title %></h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <%= yield %>
  </div>
</div>
