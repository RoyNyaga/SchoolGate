<div class="container">
  <h4 class="text-center my-4"><%= @academic_year.year %> Academic Year</h4>
  <div class="text-center my-3">
    <%= render partial: "terms/form", 
        layout: "layouts/modal_layout", 
        locals: { term: @term, academic_year: @academic_year, action_name: "Add A Term", action_title: "Create A New Term",
        modal_id: generate_modal_id("new", record: @term) }%>
  </div>
  <div class="row">
    <% @academic_year.terms.each do |term| %>
      <div class="col-md-3">
        <%= render term %>
      </div>
    <% end %>
  </div>
</div>
