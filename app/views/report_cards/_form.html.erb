  </div>
  <div>
    <%= form.hidden_field :term_id, value: term.id %>
  </div>
  <div>
    <%= form.label :average, style: "display: block" %>
    <%= form.text_field :average %>
  </div>
  <div>
    <%= form.label :rank, style: "display: block" %>
    <%= form.number_field :rank %>
  </div>
  <div>
    <%= form.label :class_average, style: "display: block" %>
    <%= form.number_field :class_average %>
  </div>
  <div>
    <%= form.label :passed_subjects, style: "display: block" %>
    <%= form.number_field :passed_subjects %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
