<div>
  <%= link_to "view pdf", pdf_view_report_card_path(report_card, format: :pdf) %>
  <div class="light-grey-card d-flex justify-content-around my-2">
    <p class="margin-zero">Average: <span class="text-color-grey-2"><%= report_card.average.round(2) %></span></p>
    <p class="margin-zero">Class Average: <span class="text-color-grey-2"><%= report_card.class_average.round(2) %></span></p>
    <p class="margin-zero">Rank: <span class="text-color-grey-2"><%= report_card.rank %> / <%= report_card.school_class.students.count %></span></p>
    <p class="margin-zero">Subject Passed: <span class="text-color-grey-2"><%= report_card.passed_subjects%></span></p>
  </div>
  <div>
    <p>Summary</p>
    <%= line_chart report_card_performance_line_charts_path(report_card_id: report_card.id), 
        loading: "We are fetching your data .....", colors: ["green", "pink"], 
        title: "Subject Performance Summary"  %>
  </div>
  <div class="my-5 light-grey-card horizontal-scroll">
    <%= render partial: "report_cards/report_card", locals: { report_card: report_card } %>
  </div>
  <div>
    <%= link_to "Edit Report Card", edit_report_card_path(report_card), class: "general-link" %>
  </div>
</div>
