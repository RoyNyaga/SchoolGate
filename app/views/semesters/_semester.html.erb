<div class="light-grey-card p-2" id="<%= dom_id semester %>">
  <h4 class="text-center">
    <%= semester.semester_type.humanize %>
  </h4>
  <div class="d-flex justify-content-between align-items-start" data-controller="academicYears">
    <%= render partial: "shared/active_toggle_form", locals: { resource: semester,
      resource_deactivate_path: toggle_activeness_semester_path(id: semester.id, is_active: false),
      resource_activate_path: toggle_activeness_semester_path(id: semester.id, is_active: true) }%>
  </div>
</div>
