<div class="container">
  <%= link_to "Yearly Stats", statistics_fees_path(academic_year_id: current_school.active_academic_year.id), class: "edit-link" %>
  <div class="row light-grey-card my-2">
    <div class="col-md-5">
      <%= render "search_form" %>
    </div>
    <div class="col-md-6 text-center">
      <div class="py-2">
        <p class="margin-zero">Active Students <span class="text-color-grey-2 px-3">----</span></p>
        <p class="margin-zero">Complete Fees <span class="text-color-grey-2 px-3">--</span></p>
        <p class="margin-zero">Incomplete Fees <span class="text-color-grey-2 px-3">--</span></p>
      </div>
    </div>
  </div>
  <div class="white-section-div">
    <%= render partial: "fees_index_table", locals: { fees: @fees } %>
    <%= will_paginate @fees %>
  </div>
</div>
