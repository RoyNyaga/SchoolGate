<%= form_with url: search_fees_path, method: :get do |form| %>
  <div class="row section-div" id="main-search-section">
    <div class="col-md-4">
      <%= form.select :academic_year, [["2023/2024", "2023/2024"]], { prompt: "Select Permission" }, { class: "general-input-styles" } %>
    </div>
    <div class="col-md-8">
      <%= form.text_field :student_name, class: "general-input-styles", placeholder: "Enter Student Name" %>
    </div>
  </div>
  <div class="row section-div d-none" id="advanced-search-input-fields">
    <div class="col-md-6">
      <%= form.text_field :school_class, class: "general-input-styles", placeholder: "Enter Class Name" %>
    </div>
    <div class="col-md-6">
      <%= form.number_field :percent_complete, class: "general-input-styles", placeholder: "Enter percent complete" %>
    </div>
    <div class="col-md-6">
      <%= form.number_field :student_uniqu_id, class: "general-input-styles", placeholder: "Enter student Uniqu ID" %>
    </div>
  </div>
  <div class="d-flex justify-content-between" data-controller="fees">
    <%= form.submit "Search" %>
    <span id=id="more-option-search-btn" class="bg-white" data-action="click->fees#moreSearchOptions">More Options</span>
    <span id="less-option-search-btn" class="bg-white d-none bg-white" data-action="click->fees#lessSearchOptions">Less Options</span>
  </div>
<% end %>
