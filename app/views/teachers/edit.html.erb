<div class="flash" id="custom-flash">
</div>
<h1>Editing Teacher</h1>
<div data-controller="photoUploads" class="row">
  <div class="col-md-2">
    <div>
      <% if @teacher.photo.attached? %>
        <%= image_tag url_for(@teacher.photo), class: "img-fluid", data: { photoUploads_target: "image" } %>
      <% else %>
        <%= image_tag "user_photo.webp", class: "img-fluid", data: { photoUploads_target: "image" }, alt: "your photo is missing" %>
      <% end %>
    </div>
    <%= render partial: "shared/photo_form", 
        layout: "layouts/modal_layout", 
        locals: { record: @teacher, modal_id: generate_modal_id("photo_form", record: @teacher), 
        action_name: photo_action_name(@teacher),
        url: update_photo_teacher_path(@teacher), action_title: "" }%>
  </div>
  <div class="col-md-8">
    <div class="section-div">
      <%= render "form", teacher: @teacher %>
    </div>
  </div>
</div>
<br>
<div>
  <%= link_to "Show this Teacher", @teacher %> |
</div>
