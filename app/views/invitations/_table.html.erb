<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">School</th>
      <th scope="col">Sender</th>
      <th scope="col">salary</th>
      <th scope="col">status</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% invitations.each do |i| %>
      <tr>
        <td><%= i.school.full_name %></td>
        <td><%= i.sender.full_name %></td>
        <td><%= i.proposed_salary %></td>
        <td><%= i.status %></td>
        <td><%= i.created_at %></td>
        <td>
          <%= button_to "Accept", accept_invitation_path(i), method: :put, data: { confirm: "Are you sure?" }, html_options: { form_class: "accept-invit-btn"}  %>
          <%= button_to "Reject", reject_invitation_path(i), method: :put, data: { confirm: "Are you sure?" }, html_options: { form_class: "accept-invit-btn"}  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
