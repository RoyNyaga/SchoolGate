<div class="container-fluid dark-blue-section-div" id="sign-in-div">
  <div class="container">
    <div class="row light-grey-card py-5">
      <div class="col-md-4" id="sign-in-colum-div">
        <div class="sign-in-form-div py-5 px-4">
          <h4 class="sign-in-headers">Log in</h4>
          <p class="no-account-yet">Do not have an account yet?  <%= link_to "Create new account", new_registration_path(resource_name), class: "sign-up-link" %></p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field my-3">
              <%= f.label :phone %><br />
              <%= f.number_field :phone_number, placeholder: "Enter your phone number", class: "sign-in-inputs" %>
            </div>
            <div class="field my-3">
              <div class="d-flex justify-content-between"><%= f.label :password %> <%= link_to "Forgot your password?", new_password_path(resource_name), class: "sign-up-link" %></div>
              <%= f.password_field :password, placeholder: "Enter Password", autocomplete: "current-password", class: "sign-in-inputs" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field my-3">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <div class="actions">
              <%= f.submit "Log in", class: "sign-in-btn" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="d-none d-md-block col-md-8">
        <%= image_tag("sign-in.png", class: "img-fluid")%>
      </div>
    </div>
  </div>
</div>
