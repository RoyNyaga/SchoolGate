<div class="light-grey-card p-2 dashboard-normal-font-size">
  <h6><%= assessment.title %></h6>
  <p class="margin-zero">Course <span class="text-color-grey-2 px-3"><%= assessment.course.long_title %></span></p>
  <p class="margin-zero">Student enrolled: <span class="text-color-grey-2 px-3"><%= assessment.marks.size %></span></p>
  <p class="margin-zero">Percent success: <span class="text-color-grey-2 px-3"><%= assessment.percent_success %> %</span></p>
  <p class="margin-zero">Lecturer: <span class="text-color-grey-2 px-3"><%= assessment.teacher.full_name %></span></p>
  <div class="d-flex justify-content-between align-items-start">
    <%= render partial: "assessments/preview", 
        layout: "layouts/drawer_layout", 
        locals: { sequence: sequence, title: sequence.seq_title,
        item_id: generate_drawer_id("preview_sequence", record: sequence), 
        position: "end", btn_text: "View", btn_visibility: true }%>
    <span class="text-white p-1 badge <%= sequence_status_badge_color(sequence) %>"><%= sequence.status.humanize %></span>
    <%= link_to "Edit", edit_sequence_path(sequence), class: "general-link" %>
  </div>
</div>
