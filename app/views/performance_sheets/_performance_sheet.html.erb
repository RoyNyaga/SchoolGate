<div id="<%= dom_id performance_sheet %>" class="dashboard-normal-font-size light-grey-card p-2">
  <div>
    <h5 class="text-center"><%= performance_sheet.title %></h5>
    <div>
      <p class="margin-zero text-color-grey-2">Number of student above average: <span class="text-color-grey-2"><%= performance_sheet.passed_student_num %></span></p>
      <p class="margin-zero text-color-grey-2">Number of student below average: <span class="text-color-grey-2"><%= performance_sheet.student_num_below_avg %></span></p>
      <p class="margin-zero text-color-grey-2">Percentage Success: <span class="text-color-grey-2"><%= performance_sheet.percentage_success %> %</span></p>
    </div>
    <div class="d-flex justify-content-center">
      <%= button_to "Regenerate", regenerate_performance_sheet_path(performance_sheet), method: :put, class: "general-btn" %>
      <%= link_to "Download", download_performance_sheet_path(format: :pdf, id: performance_sheet.id), class: "general-btn" %>
    </div>
  </div>
</div>
