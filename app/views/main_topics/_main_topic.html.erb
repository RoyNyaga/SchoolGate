<div class="accordion-item">
  <h2 class="accordion-header">
    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#<%= generate_accordion_id("child", record: main_topic) %>" aria-expanded="true" aria-controls="collapseOne">
      <%= main_topic.title %>
    </button>
  </h2>
  <div id=<%= generate_accordion_id("child", record: main_topic) %> class="accordion-collapse collapse" data-bs-parent="#<%= generate_accordion_id("parent_#{curriculum.id}") %>">
    <div class="accordion-body">
      <%= render partial: "topics/topic_list", locals: { subject: subject, main_topic: main_topic } %>
    </div>
  </div>
</div>
