<%= form_with(model: working) do |form| %>
  <% if working.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(working.errors.count, "error") %> prohibited this working from being saved:</h2>
      <ul>
        <% working.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.hidden_field :school_id %>
  </div>
  <div>
    <%= form.hidden_field :teacher_id %>
  </div>
  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Working.statuses.map { |k,v| [k.humanize, k] }, { prompt: "Select Permission" }, { class: "general-input-styles" } %>
  </div>
  <div>
    <%= form.label :permission, style: "display: block" %>
    <%= form.select :permission, Working.permissions.map { |k,v| [k.humanize, k] }, { prompt: "Select Permission" }, { class: "general-input-styles" } %>
  </div>
  <div>
    <%= form.label :agreed_salary, style: "display: block" %>
    <%= form.text_field :agreed_salary, class: "general-input-styles" %>
  </div>
  <div>
    <%= form.label :job_description, style: "display: block" %>
    <%= form.text_area :job_description, class: "general-input-styles", style: "height: 100px;" %>
  </div>
  <div>
    <%= form.submit :save, class: "model-form-btn" %>
  </div>
<% end %>
